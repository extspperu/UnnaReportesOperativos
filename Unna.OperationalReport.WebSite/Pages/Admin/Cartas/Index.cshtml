@page "{Id?}"
@model Unna.OperationalReport.WebSite.Pages.Admin.Cartas.IndexModel
@{
}
@section Styles {
    <link href="~/css/reportes.css" rel="stylesheet" />
}

@section Scripts {

    <script src="~/js/admin/cartas/dgh/index.js?v=14"></script>
}

<input type="hidden" id="__URL_OBTENER_REPORTE" value="@Url.Content($"~/api/admin/cartas/Solicitud/Obtener/{Model.IdCarta}")" />
<input type="hidden" id="__URL_GUARDAR_REPORTE" value="@Url.Content("~/api/admin/cartas/Solicitud/Guardar")" />


<div class="alert alert-danger" role="alert" id="contenidoErrorMensaje" style="display:none">
    No existe esta carta configurada
</div>


<div class="container" style="display:none;" id="contenidoCarta">
    <div class="row">
        <div class="col-12">
            <img src="@Url.Content("~/images/logo.png")" alt="Unna Energía Logo" style="width: 11rem;">
        </div>
    </div>
    <div class="row mt-10">
        <div class="col-md-12 mt-4">
            <div class="row">
                <div class="col-md-8">


                    <div class="form-group row mt-5">
                        <label class="col-md-3 col-form-label">Sumilla</label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm" id="tbSumilla" >
                                <input type="text" class="form-control form-control-sm" id="tbNumero">
                                <input type="text" class="form-control form-control-sm" id="tbAnio">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">Fecha</label>
                        <div class="col-md-9">
                            <input class="form-control form-control-sm" type="text" value="" id="tbFecha">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">Destinatario</label>
                        <div class="col-md-9">
                            <textarea class="form-control form-control-sm" style="height:10rem;" id="tbDestinatario"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">Asunto</label>
                        <div class="col-md-9">
                            <input class="form-control form-control-sm" type="text" value="" id="tbAsunto">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">Periodo</label>
                        <div class="col-md-9">
                            <input class="form-control form-control-sm" type="text" value="" id="tbPeriodo">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">Contenido</label>
                        <div class="col-md-9">
                            <textarea class="form-control form-control-sm" style="height:16rem;" id="tbCuerpo"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">Pie</label>
                        <div class="col-md-9">
                            <textarea class="form-control form-control-sm" style="height:8rem;" id="tbPie"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">Firma</label>
                        <div class="col-md-9" id="firmaCarta">
                        </div>
                    </div>
                    <hr>

                    <div class="row">
                        <div class="col-12 text-center">
                            <h2>INFORME MENSUAL PARA EL MINISTERIO DE ENERGÍA Y MINAS</h2>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 text-right">
                            <label id="periodoSH"></label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 text-left">
                            <h3>DIRECCIÓN GENERAL DE HIDROCARBUROS (DGH)</h3>
                            <h3>ORGANISMO SUPERVISOR DE LA INVERSION EN ENERGIA Y MINERIA (OSINERGMIN)</h3>
                            <p>(Art.96 del reglamento de Normas para la Refinación y Procesamiento de Hidrocarburos, D.S.No 051-93-EM)</p>
                        </div>
                    </div>

                    <div class="row mt-5">
                        <div class="col-12">
                            <table class="table table-bordered">
                                <thead>

                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-left">EMPRESA</td>
                                        <td class="text-left">UNNA ENERGÍA S.A.</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">CAPACIDAD</td>
                                        <td class="text-left">PLANTA DE DESTILACIÓN VERDUN ALTO: 2,000 BARRILES</td>                                      
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td class="text-left">PLANTA DE ABSORCIÓN PARIÑAS: 40 MMPCD</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Cuadro 1 -->
                    <div class="form-group row">
                        <div class="col-md-12">
                            <h5>1. Recepción de Gas Natural Asociado</h5>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-left">Procedencia del Gas</th>
                                        <th class="text-left">MPC/MES</th>
                                        <th class="text-left">Propiedades y Calidad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-left">LOTE Z-2B SAVIA PERU S.A / Z-69 PETROPERU S.A.</td>
                                        <td class="text-left"><input type="text" id="recepcionLoteZ2B" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">LOTE X CNPC PERU S.A.</td>
                                        <td class="text-left"><input type="text" id="recepcionLoteX" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">LOTE VI PETROPERU</td>
                                        <td class="text-left"><input type="text" id="recepcionLoteVI" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">LOTE I PETROPERU</td>
                                        <td class="text-left"><input type="text" id="recepcionLoteI" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">LOTE V UNNA ENERGIA</td>
                                        <td class="text-left"><input type="text" id="recepcionLoteV" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">Total</td>
                                        <td class="text-left"><input type="text" id="recepcionTotal" value="" class="form-control"></td>
                                        <td class="text-left"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Cuadro 2 -->
                    <div class="row mt-5">
                        <div class="col-12">
                            <h5>2. Usos del Gas</h5>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-left">Distribución del Gas</th>
                                        <th class="text-left">MPC/MES</th>
                                        <th class="text-left">Propiedades y Calidad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-left">Gas Natural Restituído</td>
                                        <td class="text-left"><input type="text" id="usoGasNaturalRestituido" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">Consumo Propio UNNA Energía</td>
                                        <td class="text-left"><input type="text" id="usoConsumoPropio" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">Convertido en LGN</td>
                                        <td class="text-left"><input type="text" id="usoConvertidoEnLgn" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">Total</td>
                                        <td class="text-left"><input type="text" id="usoTotal" value="" class="form-control"></td>
                                        <td class="text-left"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Cuadro 3 -->
                    <div class="row mt-5">
                        <div class="col-12">
                            <h5>3. Producción de Líquidos del Gas Natural</h5>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-left">Líquidos Recuperados</th>
                                        <th class="text-left">BLS/MES</th>
                                        <th class="text-left">Propiedades y Calidad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-left">GLP</td>
                                        <td class="text-left"><input type="text" id="produccionGlp" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">Propano Saturado</td>
                                        <td class="text-left"><input type="text" id="produccionPropanoSaturado" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">Butano Saturado</td>
                                        <td class="text-left"><input type="text" id="produccionButanoSaturado" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">Hexano</td>
                                        <td class="text-left"><input type="text" id="produccionHexano" value="" class="form-control"></td>
                                        <td class="text-left"></td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">Condensados del Gas Natural - CGN</td>
                                        <td class="text-left"><input type="text" id="produccionCondensados" value="" class="form-control"></td>
                                        <td class="text-left">SE ADJUNTA REPORTE</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">Promedio Líquidos</td>
                                        <td class="text-left"><input type="text" id="produccionPromedioLiquidos" value="" class="form-control"></td>
                                        <td class="text-left">BPD</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>



                    <!-- Área de texto para observaciones -->
                    <div class="row mt-5">
                        <div class="col-12">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label">OBSERVACIONES:</label>
                                <div class="col-md-10">
                                    <textarea class="form-control form-control-sm" style="height:8rem;" id="tbObservaciones"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>




        <div class="col-md-12 mt-10 mb-10">
            <div class="row d-flex justify-content-end">
                <button class="btn btn-primary mr-2" id="btnGuardar"><i class="far fa-save"></i> Guardar</button>
                <div class="dropdown">
                    <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-print"></i> Descargar
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" id="btnDescargarPdf" href="@Url.Content($"~/api/admin/cartas/Solicitud/GenerarPdf/{Model.IdCarta}")">PDF</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>


