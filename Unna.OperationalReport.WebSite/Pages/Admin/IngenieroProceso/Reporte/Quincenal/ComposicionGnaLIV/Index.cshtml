@page "{Id?}"
@model Unna.OperationalReport.WebSite.Pages.Admin.IngenieroProceso.Reporte.Quincenal.ComposicionGnaLIV.IndexModel
@{
}
<input type="hidden" id="__URL_OBTENER_REPORTE" value="@Url.Content($"~/api/admin/ingenieroProceso/reporte/quincenal/ComposicionGnaLIV/Obtener/{Model?.Dato?.Grupo}")" />
<input type="hidden" id="__URL_GUARDAR_REPORTE" value="@Url.Content($"~/api/admin/ingenieroProceso/reporte/quincenal/ComposicionGnaLIV/Guardar/{Model?.Dato?.Grupo}")" />
<input type="hidden" id="__URL_GENERAR_REPORTE_EXCEL" value="@Url.Content($"~/api/admin/ingenieroProceso/reporte/quincenal/ComposicionGnaLIV/GenerarExcel/{Model?.Dato?.Grupo}")" />
<input type="hidden" id="__URL_GENERAR_REPORTE_PDF" value="@Url.Content($"~/api/admin/ingenieroProceso/reporte/quincenal/ComposicionGnaLIV/GenerarPdf/{Model?.Dato?.Grupo}")" />


@section Styles {
    <link href="~/css/reportes.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/admin/ingenieroproceso/reporte/Quincenal/ComposicionGnaLIV/index.js"></script>

}

<input type="hidden" id="__HD_URL_GENERAR_REPORTE" value="@Url.Content("~/api/admin/ingenieroProceso/reporte/diario/BoletaCnpc/GenerarExcel")" />

<div class="container">
    @if (Model == null|| Model.Dato == null)
    {
          <div class="row">
        <div class="col-12">
            <h1>No se puede obtener el reporte</h1>
            </div>
            </div>
    }
    else
    {
        <div class="row">
        <div class="col-12">
            <table class="table tbl-resumen-ventas w-100">
                <tbody>
                    <tr>
                        <td rowspan="2"><img src="~/images/logo.png" alt="Unna Energía Logo" style="width: 11rem;"></td>
                        <td rowspan="2">
                            <h2>@Model.Dato?.NombreReporte</h2>
                        </td>
                    </tr>
                </tbody>
            </table>
            </div>
            <div class="col-12">
                
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">

                                <table class="table table-bordered tbl-resumen-ventas">
                                    <thead>
                                        <tr>
                                            <th rowspan="2" style="border-top-color: rgb(255, 255, 255) !important;border-left-color: rgb(255, 255, 255) !important;background:#fff;"></th>
                                            <th colspan="12">@Model.Dato?.NombreReporte</th>
                                        </tr>
                                        <tr>
                                            <th>C6</th>
                                            <th>C3</th>
                                            <th>IC4</th>
                                            <th>NC4</th>
                                            <th>NEO C5</th>
                                            <th>IC5</th>
                                            <th>NC5</th>
                                            <th>NITROG</th>
                                            <th>C1</th>
                                            <th>CO2</th>
                                            <th>C2</th>
                                            <th>OBSERVACION</th>
                                        </tr>
                                    </thead>
                                    @if(Model.Dato.ComposicionGnaLIVDetComposicion != null && Model.Dato.ComposicionGnaLIVDetComposicion.Count > 0)
                            {
                            <tbody>
                                        @foreach (var item in Model.Dato.ComposicionGnaLIVDetComposicion)
                                        {
                                            var compGnaDiaSinSlashes = item?.CompGnaDia?.Replace("/","");
                                        <tr class="list-datos-tabla" data-id-dato="@compGnaDiaSinSlashes">
                                        <td>@item.CompGnaDia</td>
                                        <td><input type="text" class="form-control form-report only-number text-right" id="tbCompGnaC6_@compGnaDiaSinSlashes" value="@item.CompGnaC6"></td>
                                        <td><input type="text" class="form-control form-report only-number text-right" id="tbCompGnaC3_@compGnaDiaSinSlashes" value="@item.CompGnaC3"></td>
                                        <td><input type="text" class="form-control form-report only-number text-right" id="tbCompGnaIc4_@compGnaDiaSinSlashes" value="@item.CompGnaIc4"></td>
                                        <td><input type="text" class="form-control form-report only-number text-right" id="tbCompGnaNc4_@compGnaDiaSinSlashes" value="@item.CompGnaNc4"></td>
                                        <td><input type="text" class="form-control form-report only-number text-right" id="tbCompGnaNeoC5_@compGnaDiaSinSlashes" value="@item.CompGnaNeoC5"></td>
                                        <td><input type="text" class="form-control form-report only-number text-right" id="tbCompGnaIc5_@compGnaDiaSinSlashes" value="@item.CompGnaIc5"></td>
                                        <td><input type="text" class="form-control form-report only-number text-right" id="tbCompGnaNc5_@compGnaDiaSinSlashes" value="@item.CompGnaNc5"></td>
                                        <td><input type="text" class="form-control form-report only-number text-right" id="tbCompGnaNitrog_@compGnaDiaSinSlashes" value="@item.CompGnaNitrog"></td>
                                        <td><input type="text" class="form-control form-report only-number text-right" id="tbCompGnaC1_@compGnaDiaSinSlashes" value="@item.CompGnaC1"></td>
                                        <td><input type="text" class="form-control form-report only-number text-right" id="tbCompGnaCo2_@compGnaDiaSinSlashes" value="@item.CompGnaCo2"></td>
                                        <td><input type="text" class="form-control form-report only-number text-right" id="tbCompGnaC2_@compGnaDiaSinSlashes" value="@item.CompGnaC2"></td>
                                        <td>@item.CompGnaObservacion</td>
                                        </tr>
                                        }
                                    </tbody>    
                            }
                            
                                </table>

                            
                            </div>


                        </div>
                    </div>







                    <div class="row mt-10">
                        <div class="col-md-12">
                            <table class="table table-bordered tbl-resumen-ventas" style="max-width:350px;">
                                <thead>
                                    <tr>
                                        <th>ABREV.</th>
                                        <th>COMPONENTE</th>
                                        <th>MOL%</th>
                                    </tr>
                                </thead>
                                @if(Model.Dato.ComposicionGnaLIVDetComponente != null){
                                    <tbody>
                                    @foreach (var item in Model.Dato?.ComposicionGnaLIVDetComponente)
                                    {
                                        <tr>
                                             <td><p class="text-table">@item.Simbolo</p</td>
                                             <td><p class="text-table">@item.Descripcion</p</td>
                                            <td><input type="text" class="form-control form-report only-number text-right" value="@item.MolPorc"></td>
                                        </tr>
                                    }
                                </tbody>
                                }
                                
                            </table>

                        </div>
                    </div>



          

           <div class="w-100 mt-10 mb-10">
                <div class="row d-flex justify-content-end">
                    <button class="btn btn-primary mr-2" id="btnGuardar"><i class="far fa-save"></i> Guardar</button>
                    <div class="dropdown">
                        <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-print"></i> Descargar
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" id="btnDescargarExcel" href="javascript:void(0)">Excel</a>
                            <a class="dropdown-item" id="btnDescargarPdf" href="javascript:void(0)">PDF</a> 
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    }
</div>