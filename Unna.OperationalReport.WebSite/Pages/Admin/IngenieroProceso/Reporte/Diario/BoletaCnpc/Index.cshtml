@page
@model Unna.OperationalReport.WebSite.Pages.Admin.IngenieroProceso.Reporte.Diario.BoletaCnpc.IndexModel
@{
}




@section Styles {
    <link href="~/css/reportes.css" rel="stylesheet" />
}



<div class="container">
    <div class="row">
        <div class="col-12">      
            <table class="table tbl-resumen-ventas w-100">
                <tbody>
                    <tr>
                        <td rowspan="2"><img src="~/images/logo.png" alt="Unna Energía Logo" style="width: 11rem;"></td>
                        <td rowspan="2">
                            <h2>BOLETA DE DE  TITULACIÓN </h2>
                        </td>
                        <td>UNNA ENERGÍA - ENEL</td>
                    </tr>
                    <tr>
                        <td>Versión 01</td>
                    </tr>
                </tbody>
            </table>

            <!-- Cuadro N° 1 -->
            <div class="container mt-3">

                <div class="container mt-3">
                    <div class="row">
                        <div class="w-100 mt-5 mb-1">
                            <table class="table table-bordered tbl-resumen-ventas" style="max-width:300px;float: right;">
                                <tbody>
                                    <tr>
                                        <td><b>FECHA</b></td>
                                        <td><b>@Model.Dato.Fecha</b> </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <h3 class="mb-5 mt-1 w-100">Cuadro N°1. Resumen de Ventas</h3>
                    </div>
                    <table class="table table-bordered tbl-resumen-ventas">
                        <thead>
                            <tr>
                                <th>
                                    FECHA
                                </th>
                                <th>
                                    GAS MPCD
                                </th>
                                <th>GLP (Bls)</th>
                                <th>CGN (Bls)</th>
                                <th>CGN (MPC)</th>
                                <th>GC (MPC)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input type="text" class="form-control form-report text-center" value="@Model.Dato.Tabla1.Fecha"></td>
                                <td><input type="text" class="form-control form-report text-center" value="@Model.Dato.Tabla1.GasMpcd"></td>
                                <td><input type="text" class="form-control form-report text-center" value="@Model.Dato.Tabla1.GlpBls"></td>
                                <td><input type="text" class="form-control form-report text-center" value="@Model.Dato.Tabla1.CgnBls"></td>
                                <td><input type="text" class="form-control form-report text-center" value="@Model.Dato.Tabla1.CnsMpc"></td>
                                <td><input type="text" class="form-control form-report text-center" value="@Model.Dato.Tabla1.CgMpc"></td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>


            <!-- Cuadro Firma -->
            <div class="w-100 mt-20">
                <img src="~/images/firmas/FIRMA RSC.jpeg" style="max-width:220px;" />
            </div>

            <div class="row mt-10">
                <div class="col-6">
                    <h3>UNNA ENERGÍA S.A.</h3>
                </div>
                <div class="col-6">
                    <h3>ENEL</h3>
                </div>
            </div>


            <div class="w-100 mt-10 mb-10 text-right">
                @* <button onclick="descargarBoletaExcel()" class="btn btn-primary btn-lg">Descargar Excel</button> *@
                <button onclick="descargarBoletaPDF()" class="btn btn-success btn-lg">Descargar PDF</button>

            </div>



        </div>
    </div>
</div>

<script>
   
    function descargarBoletaPDF() {
        window.location = '/api/admin/ingenieroProceso/reporte/diario/BoletaVentaGns/Pdf';
    }

   
</script>